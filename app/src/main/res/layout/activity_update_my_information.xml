<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"


    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".src.HomeDogDog.TrackingNoteFragment.AddTrackingNote.AddTrackingNote">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="37dp"
            android:fontFamily="@font/spoqahansansbold"
            android:text="내 정보"
            android:textColor="#333333"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view9"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="34dp"
            android:background="#e4e4e4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <ImageView
            android:id="@+id/imageView59"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="33dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView7"
            app:srcCompat="@drawable/close" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="24dp"
                android:textColor="#bbbbbb"
                android:textSize="16sp"
                android:text="이름"
                ></TextView>
            <FrameLayout
                android:id="@+id/edit_name_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                >

                <EditText
                    android:id="@+id/name_edt_addDogs"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginStart="34dp"
                    android:layout_marginLeft="34dp"
                    android:layout_marginEnd="34dp"
                    android:layout_marginRight="34dp"
                    android:backgroundTint="@color/editTextUnderLine"
                    android:ems="10"
                    android:fontFamily="@font/spoqahansansregular"
                    android:inputType="textVisiblePassword|textNoSuggestions"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:text=""
                    android:textSize="24sp"></EditText>
                <!--  android:inputType="textVisiblePassword|textNoSuggestions"
                이걸 써야 입력시 underline이 나오지 않는다.
                -->
                <ImageView
                    android:id="@+id/name_edtclear_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="34dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/close_big" />


            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="24dp"
                android:textColor="#bbbbbb"
                android:textSize="16sp"
                android:text="아이디"
                ></TextView>
            <FrameLayout
                android:id="@+id/edit_birthday_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                >

                <EditText
                    android:id="@+id/birthday_edt_addDogs"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginStart="34dp"
                    android:layout_marginLeft="34dp"
                    android:layout_marginEnd="34dp"
                    android:layout_marginRight="34dp"
                    android:backgroundTint="@color/editTextUnderLine"
                    android:ems="10"
                    android:fontFamily="@font/spoqahansansregular"
                    android:inputType="textVisiblePassword|textNoSuggestions"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:text=""
                    android:textSize="24sp"></EditText>
                <!--  android:inputType="textVisiblePassword|textNoSuggestions"
                이걸 써야 입력시 underline이 나오지 않는다.
                -->
                <ImageView
                    android:id="@+id/birthday_edtclear_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="34dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/close_big" />


            </FrameLayout>


            <FrameLayout
                android:id="@+id/edt_frame_addDogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="24dp"
                android:textColor="#bbbbbb"
                android:textSize="16sp"
                android:text="비밀번호"

                ></TextView>



            <FrameLayout
                android:id="@+id/edt_frame_step3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                app:layout_constraintBottom_toTopOf="@+id/backButton_step"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tellmePassword_Step2Activity">

                <EditText
                    android:id="@+id/edit_Input_Text_joinmember"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="34dp"
                    android:layout_marginLeft="34dp"
                    android:layout_marginEnd="34dp"
                    android:layout_marginRight="34dp"
                    android:backgroundTint="@color/editTextUnderLine"
                    android:ems="10"
                    android:inputType="textPassword|textNoSuggestions"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:text=""
                    android:fontFamily="@font/spoqahansansregular"
                    android:textSize="24sp"></EditText>

                <ImageView
                    android:id="@+id/edtclear_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="34dp"
                    android:layout_marginBottom="10dp"
                    app:srcCompat="@drawable/close_big" />

            </FrameLayout>
            <TextView
                android:id="@+id/next_button_addDogs"
                android:layout_width="match_parent"
                android:layout_height="60dp"


                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/grey_shape_full"
                android:gravity="center|center_vertical"
                android:fontFamily="@font/spoqahansansbold"
                android:text="탈퇴하기"
                android:textColor="#bbbbbb"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/next_button_addDogs"
                android:layout_width="match_parent"
                android:layout_height="60dp"


                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/shape_full"
                android:gravity="center|center_vertical"
                android:fontFamily="@font/spoqahansansbold"
                android:text="등록"
                android:textColor="@color/white"
                android:textSize="18sp"
                />


        </LinearLayout>
    </ScrollView>
</LinearLayout>