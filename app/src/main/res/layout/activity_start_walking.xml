<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".src.HomeDogDog.startWalking.startWalking"

    >

    <com.makeus.dogdog.src.HomeDogDog.startWalking.DonutView

        android:id="@+id/donut"
        android:layout_width="@dimen/donut_size"
        android:layout_height="@dimen/donut_size"
        android:layout_marginTop="78dp"

        android:layout_marginBottom="79dp"
        android:padding="10dp"
        custom:layout_constraintBottom_toTopOf="@+id/textView28"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toTopOf="@+id/textView29">


    </com.makeus.dogdog.src.HomeDogDog.startWalking.DonutView>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="300dp"
        android:max="100"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintStart_toStartOf="parent"></SeekBar>

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintHorizontal_bias="0.5"
        custom:layout_constraintStart_toEndOf="@+id/start_walking"
        custom:srcCompat="@drawable/camera" />

    <ImageView
        android:id="@+id/start_walking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintEnd_toStartOf="@+id/imageView13"
        custom:layout_constraintHorizontal_bias="0.5"
        custom:layout_constraintStart_toEndOf="@+id/imageView16"
        custom:srcCompat="@drawable/start" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintEnd_toStartOf="@+id/start_walking"
        custom:layout_constraintHorizontal_bias="0.5"
        custom:layout_constraintStart_toStartOf="parent"
        custom:srcCompat="@drawable/stop" />

    <View
        android:id="@+id/view5"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="14dp"
        android:background="@color/black"
        custom:layout_constraintBottom_toBottomOf="@+id/textView26"
        custom:layout_constraintEnd_toEndOf="@+id/textView30"
        custom:layout_constraintStart_toEndOf="@+id/textView28"
        custom:layout_constraintTop_toBottomOf="@+id/seekBar" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="산책시간"
        custom:layout_constraintStart_toStartOf="@+id/walking_time_startwalking"
        custom:layout_constraintTop_toBottomOf="@+id/seekBar" />

    <Chronometer
        android:id="@+id/walking_time_startwalking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="49dp"
        custom:layout_constraintEnd_toEndOf="@+id/imageView13"
        custom:layout_constraintStart_toEndOf="@+id/view5"
        custom:layout_constraintTop_toBottomOf="@+id/textView25" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="13dp"
        android:text="산책거리"
        custom:layout_constraintBottom_toTopOf="@+id/textView28"
        custom:layout_constraintStart_toStartOf="@+id/textView28" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginTop="48dp"
        android:text="0.4km"
        custom:layout_constraintStart_toStartOf="@+id/seekBar"
        custom:layout_constraintTop_toBottomOf="@+id/seekBar" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="86dp"
        android:text="목표"
        custom:layout_constraintStart_toStartOf="@+id/textView30"
        custom:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="하루 30분 산책하기"
        custom:layout_constraintBottom_toTopOf="@+id/donut"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toTopOf="parent"
        custom:srcCompat="@drawable/ic_arrow" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="28dp"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintTop_toTopOf="parent"
        custom:srcCompat="@drawable/more" />

</androidx.constraintlayout.widget.ConstraintLayout>

